<div>
  <div>
    <h1>
      <%= @current_user.first_name %>'s Current Preferences:
    </h1>
  </div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Item</th>
      <th scope="col">Answer</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Number of roommates</th>
      <td><%= @list_of_preferences.at(0).roommate_num%></td>
    </tr>
    <tr>
      <th scope="row">Number of bathrooms</th>
      <td><%= @list_of_preferences.at(0).bathroom_num%></td>
    </tr>
    <tr>
      <th scope="row">Person Type</th>
      <td><%= @list_of_preferences.at(0).person_type%></td>
    </tr>
    <tr>
      <th scope="row">OK with roommate who smokes</th>
      <td><%= @list_of_preferences.at(0).smoker %></td>
    </tr>
    <tr>
      <th scope="row">Max Rent</th>
      <td>$<%= @list_of_preferences.at(0).max_rent%></td>
    </tr>
    <tr>
      <th scope="row">Elevator</th>
      <td><%= @list_of_preferences.at(0).elevator%></td>
    </tr>
    <tr>
      <th scope="row">Doorman</th>
      <td><%= @list_of_preferences.at(0).doorman%></td>
    </tr>
    <tr>
      <th scope="row">Pet-friendly</th>
      <td><%= @list_of_preferences.at(0).pets%></td>
    </tr>
    <tr>
      <th scope="row">Close to public transportation</th>
      <td><%= @list_of_preferences.at(0).transportation%></td>
    </tr>
    <tr>
      <th scope="row">Air conditioner</th>
      <td><%= @list_of_preferences.at(0).air_conditioner%></td>
    </tr>
  </tbody>
</table>
<a href="/members_list"><button type="submit" class="btn btn-primary"> Let's continue </button></a>
