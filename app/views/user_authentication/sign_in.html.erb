<h1 align = "center">Sign in</h1>
<hr>
<form align="center" action="/user_verify_credentials" method="post">
  <div class="form-group row">
    <label for="email_box" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="query_email" id="email_box" placeholder="email@example.com">
    </div>
  </div>
  <div class="form-group row">
    <label for="password_box" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="query_password" id="password_box">
    </div>
  </div>
     <button type="submit" class="btn btn-primary">Sign in </button>
</form>

<hr>
<p align="center">
  Or, <a href="/user_sign_up">Sign up</a> instead.
</p>
