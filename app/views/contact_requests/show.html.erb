<div>
  <div>
    <h1>
      Contact request #<%= @the_contact_request.id %> details
    </h1>

    <div>
      <div>
        <a href="/contact_requests">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_contact_request/<%= @the_contact_request.id %>">
          Delete contact request
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Sender
      </dt>
      <dd>
        <%= @the_contact_request.sender_id %>
      </dd>

      <dt>
        Recipient
      </dt>
      <dd>
        <%= @the_contact_request.recipient_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_contact_request.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_contact_request.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit contact request
    </h2>

    <form action="/modify_contact_request/<%= @the_contact_request.id %>"  method="post" >
      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id" value="<%= @the_contact_request.sender_id %>">
      </div>

      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id" value="<%= @the_contact_request.recipient_id %>">
      </div>

      <button>
        Update contact request
      </button>
    </form>
  </div>
</div>

<hr>
