<div>
  <div>
    <h1>
      List of all roommate requests
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new roommate request
    </h2>

    <form action="/insert_roommate_request" method="post">
      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id">
      </div>

      <button>
        Create roommate request
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_roommate_requests.each do |a_roommate_request| %>
      <tr>
        <td>
          <%= a_roommate_request.id %>
        </td>

        <td>
          <%= a_roommate_request.sender_id %>
        </td>

        <td>
          <%= a_roommate_request.recipient_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_roommate_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_roommate_request.updated_at) %> ago
        </td>

        <td>
          <a href="/roommate_requests/<%= a_roommate_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
